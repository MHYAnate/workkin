# ===========================================
# WORKKIN BACKEND - ENVIRONMENT CONFIGURATION
# ===========================================

# Application
NODE_ENV=development
PORT=4000
API_VERSION=v1
APP_NAME=Workkin
APP_URL=http://localhost:4000
FRONTEND_URL=http://localhost:3000

# Database - PostgreSQL (Neon.tech)
DATABASE_URL="postgresql://username:password@ep-xxx.region.neon.tech/workkin?sslmode=require"
DATABASE_URL_UNPOOLED="postgresql://username:password@ep-xxx.region.neon.tech/workkin?sslmode=require"
SHADOW_DATABASE_URL="postgresql://username:password@ep-xxx.region.neon.tech/workkin_shadow?sslmode=require"

# Redis - Upstash
REDIS_URL="redis://default:xxx@xxx.upstash.io:6379"
REDIS_HOST=xxx.upstash.io
REDIS_PORT=6379
REDIS_PASSWORD=xxx
REDIS_TLS=true

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_ISSUER=workkin-api
JWT_AUDIENCE=workkin-users

# Password Hashing
BCRYPT_SALT_ROUNDS=12

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_FOLDER=workkin

# Email - Resend
RESEND_API_KEY=re_xxx
EMAIL_FROM=noreply@workkin.com
EMAIL_FROM_NAME=Workkin

# SMS - Twilio
TWILIO_ACCOUNT_SID=ACxxx
TWILIO_AUTH_TOKEN=xxx
TWILIO_PHONE_NUMBER=+1234567890

# Zainpay Payment Gateway
ZAINPAY_PUBLIC_KEY=your-zainpay-public-key
ZAINPAY_SECRET_KEY=your-zainpay-secret-key
ZAINPAY_SANDBOX=true
ZAINPAY_ZAINBOX_CODE=your-zainbox-code
ZAINPAY_CALLBACK_URL=http://localhost:4000/webhooks/zainpay
ZAINPAY_EMAIL_NOTIFICATION=payments@workkin.com

# Paystack (Backup Payment)
PAYSTACK_PUBLIC_KEY=pk_test_xxx
PAYSTACK_SECRET_KEY=sk_test_xxx
PAYSTACK_CALLBACK_URL=http://localhost:4000/webhooks/paystack

# Flutterwave (Backup Payment)
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-xxx
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-xxx
FLUTTERWAVE_ENCRYPTION_KEY=xxx
FLUTTERWAVE_CALLBACK_URL=http://localhost:4000/webhooks/flutterwave

# AI - DeepSeek
DEEPSEEK_API_KEY=sk-xxx
DEEPSEEK_API_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# AI - Pinecone Vector Database
PINECONE_API_KEY=xxx
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=workkin-embeddings
PINECONE_NAMESPACE=production

# AI - OpenAI Embeddings (Optional - via DeepSeek compatible)
OPENAI_API_KEY=sk-xxx
EMBEDDING_MODEL=text-embedding-ada-002

# Socket.io
SOCKET_CORS_ORIGIN=http://localhost:3000
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=false

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm,application/pdf
MAX_FILES_PER_UPLOAD=10

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6
OTP_RESEND_COOLDOWN_SECONDS=60

# Verification
VERIFICATION_TOKEN_EXPIRY_HOURS=24

# Subscription Configuration
DEFAULT_FREE_LISTINGS=1
BASE_FREE_LISTINGS=2
MID_FREE_LISTINGS=3
TOP_FREE_LISTINGS=7

# GraphQL
GRAPHQL_PATH=/graphql
GRAPHQL_PLAYGROUND=true
GRAPHQL_INTROSPECTION=true
GRAPHQL_DEPTH_LIMIT=10
GRAPHQL_COMPLEXITY_LIMIT=1000

# Sentry Error Tracking
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Logging
LOG_LEVEL=debug
LOG_FORMAT=pretty

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Security
HELMET_ENABLED=true
HPP_ENABLED=true
XSS_PROTECTION=true

# Session
SESSION_SECRET=your-session-secret-key

# Webhook Secrets
ZAINPAY_WEBHOOK_SECRET=your-zainpay-webhook-secret
PAYSTACK_WEBHOOK_SECRET=your-paystack-webhook-secret
FLUTTERWAVE_WEBHOOK_SECRET=your-flutterwave-webhook-secret
CLOUDINARY_WEBHOOK_SECRET=your-cloudinary-webhook-secret

# Maps (for location services)
MAPBOX_ACCESS_TOKEN=pk.xxx
GOOGLE_MAPS_API_KEY=AIzaxxx

# Push Notifications
VAPID_PUBLIC_KEY=xxx
VAPID_PRIVATE_KEY=xxx
VAPID_SUBJECT=mailto:admin@workkin.com

# Feature Flags
ENABLE_AI_INSIGHTS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEBSOCKETS=true

# Cron Jobs
ENABLE_CRON_JOBS=true
CRON_TIMEZONE=Africa/Lagos

# Nigeria Specific
DEFAULT_COUNTRY=Nigeria
DEFAULT_COUNTRY_CODE=NG
DEFAULT_CURRENCY=NGN
DEFAULT_PHONE_CODE=+234
