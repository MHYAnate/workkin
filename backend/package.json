{
  "name": "workkin-backend",
  "version": "1.0.0",
  "description": "Workkin Platform - Backend API with Express, GraphQL, and PostgreSQL",
  "main": "dist/index.js",
  "type": "module",
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "tsx prisma/seed.ts"
  },
  "scripts": {
    "dev": "nodemon",
    "dev:debug": "NODE_OPTIONS='--inspect' nodemon",
    "worker": "tsx src/jobs/worker.ts",
    "worker:dev": "nodemon --exec 'tsx src/jobs/worker.ts' --watch src/jobs",
    "build": "npm run clean && tsc && npm run copy:assets",
    "copy:assets": "copyfiles -u 1 src/**/*.graphql dist/",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "clean": "rimraf dist",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:create": "prisma migrate dev --create-only",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:push": "prisma db push",
    "prisma:seed": "tsx prisma/seed.ts",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset",
    "prisma:validate": "prisma validate",
    "prisma:format": "prisma format",
    "db:setup": "npm run prisma:generate && npm run prisma:migrate && npm run prisma:seed",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run test:run",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest --config vitest.e2e.config.ts",
    "test:ui": "vitest --ui",
    "generate:types": "graphql-codegen",
    "generate:all": "npm run prisma:generate && npm run generate:types",
    "prepare": "husky",
    "health": "curl -s http://localhost:4000/health | jq",
    "logs:dev": "tail -f logs/combined.log | pino-pretty",   
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "check:deps": "npm outdated",
    "check:security": "npm audit"
  },
  "keywords": [
    "workkin",
    "marketplace",
    "service-platform",
    "nigeria",
    "graphql",
    "express",
    "prisma",
    "postgresql",
    "socket.io",
    "typescript"
  ],
  "author": "Workkin Team",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.11.2",
    "@graphql-tools/merge": "^9.0.12",
    "@graphql-tools/schema": "^10.0.11",
    "@pinecone-database/pinecone": "^4.0.0",
    "@prisma/client": "^5.22.0",
    "@sentry/node": "^8.42.0",
    "@sentry/profiling-node": "^8.42.0",
    "axios": "^1.7.8",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.30.1",
    "cloudinary": "^2.5.1",
    "compression": "^1.7.5",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dataloader": "^2.2.3",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "graphql": "^16.9.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-middleware": "^6.1.35",
    "graphql-scalars": "^1.23.0",
    "graphql-shield": "^7.6.5",
    "graphql-subscriptions": "^2.0.0",
    "graphql-upload-ts": "^2.1.2",
    "graphql-ws": "^5.16.0",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.0.8",
    "nodemailer": "^7.0.13",
    "openai": "^4.73.1",
    "p-limit": "^6.1.0",
    "rate-limiter-flexible": "^5.0.4",
    "resend": "^4.0.1",
    "sanitize-html": "^2.13.1",
    "sharp": "^0.33.5",
    "slugify": "^1.6.6",
    "socket.io": "^4.8.1",
    "twilio": "^5.3.7",
    "uuid": "^11.0.3",
    "validator": "^13.12.0",
    "winston": "^3.17.0",
    "ws": "^8.18.0",
    "xss": "^1.0.15",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/typescript": "^4.1.2",
    "@graphql-codegen/typescript-resolvers": "^4.3.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/hpp": "^0.2.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.9.3",
    "@types/nodemailer": "^6.4.17",
    "@types/sanitize-html": "^2.13.0",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.12.2",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/coverage-v8": "^4.0.18",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "prettier": "^3.4.1",
    "prisma": "^5.22.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.18",
    "vitest-mock-extended": "^2.0.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,json,graphql",
    "ignore": [
      "src/**/*.test.ts",
      "src/**/*.spec.ts"
    ],
    "exec": "tsx src/index.ts",
    "delay": "500"
  }
}
